.bg_1
    background-color shade_1 !important

.bg_2
    background-color shade_2 !important

.bg_3
    background-color shade_3 !important

.bg_4
    background-color shade_4 !important

.bg_5
    background-color shade_5 !important

.bg_aux
    background-color shade_aux !important

