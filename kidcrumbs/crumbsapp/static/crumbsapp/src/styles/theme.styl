@import 'colors.styl'

if theme is 'light'
    shade = white
    shade_0 = lightness(shade,100%)
    shade_1 = lightness(shade,92%)
    shade_2 = lightness(shade,80%)
    shade_3 = lightness(shade,60%)
    shade_4 = lightness(shade,35%)
    shade_5 = lightness(shade,20%)
    shade_aux = lightness(shade,96%)
    primary_color = darkorange
    secondary_color = #555
    head_font_family = 'Raleway','Oxygen', -apple-system, BlinkMacSystemFont, "Segoe UI", ubuntu, Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", sans-serif

else
    shade = blue(lightness(#000,11),33)
    shade_0 = lightness(shade,7%)
    shade_1 = lightness(shade,13%)
    shade_2 = lightness(shade,20%)
    shade_3 = lightness(shade,28%)
    shade_4 = lightness(shade,70%)
    shade_5 = lightness(shade,80%)
    shade_aux = lightness(shade,10%)
    primary_color = teal
    secondary_color = #555
    head_font_family = 'Dosis','Lato', -apple-system, BlinkMacSystemFont, "Segoe UI", ubuntu, Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", sans-serif


// if app color is defined it converts to the color
// if not, it will default to any of the primary colors
// defined above
if appColor is defined
    primary_color = convert(appColor)


.color_white
    color white !important

.color_dark
    color #222 !important

.color_0
    color shade_0 !important


.color_1
