
@import './theme.styl'

h1, h2, h3, h4, h5, h6
    font-family head_font_family !important
    color shade_5 !important

p, a, label, div, small
    font-family  'Muli','Roboto', -apple-system, BlinkMacSystemFont, "Segoe UI", ubuntu, Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
    color shade_4 !important


a
    &.active
        color lightblue !important
        &:hover
            cursor pointer

.custom-select
.form-control
    color shade_4
    background shade_1 !important
    border none;
    &:focus
        border-color: shade_1 !important;
        box-shadow: none !important;
        border-color shade_1 !important
        outline none

.btn-primary
    color: #fff
    background-color primary_color
    border-color primary_color
    &:hover
    &:focus
    &:active
    &:active:focus
        color: #fff
        background-color primary_color !important
        border-color primary_color !important

.btn-secondary
    color: #fff
    background-color secondary_color
    border-color secondary_color
    &:hover
    &:focus
    &:active
    &:active:focus
        color: #fff
        background-color secondary_color !important
        border-color secondary_color !important    
.bootstrap-select
.btn:focus
.form-control
.btn-secondary:focus
.btn-secondary.focus   
.btn-primary:focus
.btn-primary.focus	
	box-shadow none !important
	outline none !important
.dropdown-menu
	background-color shade_1
	color shade_5

	.dropdown-item
		color shade_5
		&:hover
		&:focus
			color shade_5
			background-color shade_2
			outline none !important
		
		&.active
		&:active
			color shade_5
			background-color primary_color
			outline none !important
			
		
.self-building-square-spinner
	>div
		background-color primary_color !important
		
.popover-container.expanded
	.popover-content
		background-color shade_aux !important
	.c-pane-container
		color shade_4 !important


.vgt-table thead th
.vgt-wrap__footer

    background shade_0 !important

.vgt-table thead th
    color shade_5

.vgt-global-search
    background shade_0
    border 1px solid shade_1

.vgt-table.bordered td, .vgt-table.bordered th, .vgt-wrap__footer
    border 1px solid shade_1

table.vgt-table td
table.vgt-table
    color shade_4
    background-color shade_0 !important
 
	
.vgt-table th.sorting:hover:after
	border-bottom-color primary_color
	
	
.vgt-table thead th.sorting-desc:after
	border-top 6px solid primary_color !important
